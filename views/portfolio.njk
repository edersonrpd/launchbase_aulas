{% extends 'layout.njk' %}

{% block head %}
  <title>Portfรณlio - Ederson Domiciano</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
{% endblock %}

{% block content %}
  <div id="wrapper">
    <h1>Aulas</h1>
  </div>

  <section class="cards">
    <!-- Laço de repetição para pegar dados do array data.js  -->
    {% for item in items %}

      <div class="card" id="{{item.id}}">
        <div class="card_image-card_container {{'featured-wrapper' if item.featured}}">
          <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem de {{item.title}}"/>

          <!--Pegando o featured do array data.js-->
          {% if item.featured %}
          <div class="featured">Featured</div>
          {% endif %}
        
        </div>
        <div class="card_content">
          <p>{{item.title}}</p>
        </div>
        <div class="card_info">
          <p>{{item.duration}}</p>
          <p class="card_price">{{item.price}}</p>
        </div>
      </div>

    {% endfor %}
    <!-- Fim do laço  -->
  </section>
  
  <script src="/scripts.js"></script>
{% endblock %}